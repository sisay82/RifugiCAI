{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Node: Attach by Process ID",
            "processId": "${command:PickProcess}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceRoot}",
            "env": {
                "PORT": 8000
            }
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Test: Attach to Chrome",
            "address": "localhost",
            "port": 9333,
            "webRoot": "${workspaceRoot}",
        }
    ]
}